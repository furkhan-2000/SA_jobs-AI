      backdrop-filter: blur(36px) saturate(140%);
      -webkit-backdrop-filter: blur(36px) saturate(140%);
      border-bottom: 1px solid rgba(0,0,0,0.04);
    }

    .reduced-glass-search {
      background: rgba(255,255,255,0.78);
      backdrop-filter: blur(50px) saturate(170%);
      -webkit-backdrop-filter: blur(50px) saturate(170%);
      border: 1.5px solid rgba(255,255,255,0.9);
      box-shadow: 0 20px 60px rgba(0,0,0,0.06), inset 0 2px 0 rgba(255,255,255,0.95);
    }

    .reduced-glass-button {
      background: rgba(255,255,255,0.88);
