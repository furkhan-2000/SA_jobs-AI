  <script type="text/babel">
  (function () {
    const { useState, useEffect, useRef } = React;

    /* ---------------- Inline icon components (small, self-contained) ---------------- */
    const Icon = ({ children, size = 20, className = '', strokeWidth = 1.5 }) => (
      <svg className={className} width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth={strokeWidth} strokeLinecap="round" strokeLinejoin="round" xmlns="http://www.w3.org/2000/svg" aria-hidden>
        {children}
      </svg>
    );
    const Search = (props) => (<Icon {...props}><circle cx="11" cy="11" r="6"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></Icon>);
    const Bell = (props) => (<Icon {...props}><path d="M15 17h5l-1.405-1.405A2.032 2.032 0 0 1 18 14.158V11a6 6 0 1 0-12 0v3.159c0 .538-.214 1.055-.595 1.436L4 17h5"></path></Icon>);
    const BarChart3 = (props) => (<Icon {...props}><line x1="6" y1="20" x2="6" y2="16"></line><line x1="12" y1="20" x2="12" y2="10"></line><line x1="18" y1="20" x2="18" y2="4"></line></Icon>);
    const Shield = (props) => (<Icon {...props}><path d="M12 2l7 4v6c0 5-3.58 9.74-7 10-3.42-.26-7-5-7-10V6l7-4z"></path></Icon>);
    const ArrowRight = (props) => (<Icon {...props}><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></Icon>);
    const Briefcase = (props) => (<Icon {...props}><rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect><path d="M16 7V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v2"></path></Icon>);
    const Users = (props) => (<Icon {...props}><path d="M17 21v-2a4 4 0 0 0-3-3.87"></path><path d="M7 21v-2a4 4 0 0 1 3-3.87"></path><circle cx="12" cy="7" r="4"></circle></Icon>);
    const TrendingUp = (props) => (<Icon {...props}><polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline><polyline points="17 6 23 6 23 12"></polyline></Icon>);
    const Zap = (props) => (<Icon {...props}><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></Icon>);
    const Target = (props) => (<Icon {...props}><circle cx="12" cy="12" r="10"></circle><circle cx="12" cy="12" r="6"></circle><circle cx="12" cy="12" r="2"></circle></Icon>);
    const Award = (props) => (<Icon {...props}><circle cx="12" cy="8" r="7"></circle><polyline points="8 17 12 14 16 17"></polyline></Icon>);

    /* ---------------- Utility: linear interpolation ---------------- */
    function lerp(a, b, t) { return a + (b - a) * t; }

    /* ---------------- Trippy scroll + mouse parallax hook ---------------- */
    function useSmoothScrollAndMouse({ ease = 0.12 } = {}) {
      const [scroll, setScroll] = useState(0);          // smoothed scroll
      const targetRef = useRef(0);                      // raw scroll target
      const rafRef = useRef(null);
      const mouseRef = useRef({ x: 0, y: 0 });         // mouse position normalized -1..1
      const smoothedMouse = useRef({ x: 0, y: 0 });

      useEffect(() => {
        // Track raw scroll
        const onScroll = () => { targetRef.current = window.scrollY || window.pageYOffset || 0; };
        window.addEventListener('scroll', onScroll, { passive: true });
        onScroll();

        // Track mouse for parallax
        const onMove = (e) => {
          const nx = (e.clientX / window.innerWidth) * 2 - 1;
          const ny = (e.clientY / window.innerHeight) * 2 - 1;
          mouseRef.current.x = nx; mouseRef.current.y = ny;
        };
        window.addEventListener('mousemove', onMove);

        // RAF loop
        const loop = () => {
          // smooth scroll
          const t = ease;
          const next = lerp(scroll, targetRef.current, t);
          if (Math.abs(next - scroll) > 0.01) setScroll(next);

          // smooth mouse
          smoothedMouse.current.x = lerp(smoothedMouse.current.x, mouseRef.current.x, 0.14);
          smoothedMouse.current.y = lerp(smoothedMouse.current.y, mouseRef.current.y, 0.14);

          rafRef.current = requestAnimationFrame(loop);
        };
        rafRef.current = requestAnimationFrame(loop);

        return () => {
          window.removeEventListener('scroll', onScroll);
          window.removeEventListener('mousemove', onMove);
          cancelAnimationFrame(rafRef.current);
        };
      }, [ease, scroll]);

      return { scroll, mouse: smoothedMouse.current };
    }

    /* ---------------- Animated W logo (SVG dots) ---------------- */
    const AnimatedWLogo = ({ size = 42 }) => {
      const dots = [];
      const dotSize = Math.max(1.5, size / 34);
      const spacing = size / 8;
      for (let i = 0; i <= 5; i++) dots.push(<circle key={'l'+i} cx={spacing * i * 0.6} cy={spacing * i * 0.36} r={dotSize} fill="#111" opacity={0.8} />);
      for (let i = 0; i <= 3; i++) dots.push(<circle key={'ml'+i} cx={spacing * 3 + spacing * i * 0.46} cy={spacing * 2.2 - spacing * i * 0.36} r={dotSize} fill="#111" opacity={0.8} />);
      for (let i = 0; i <= 3; i++) dots.push(<circle key={'mr'+i} cx={spacing * 5.3 + spacing * i * 0.46} cy={spacing * 1.2 + spacing * i * 0.36} r={dotSize} fill="#111" opacity={0.8} />);
      for (let i = 0; i <= 5; i++) dots.push(<circle key={'r'+i} cx={spacing * 8 - spacing * i * 0.6} cy={spacing * i * 0.36} r={dotSize} fill="#111" opacity={0.8} />);
      return <svg width={size} height={size * 0.6} viewBox={`0 0 ${size} ${size * 0.6}`}>{dots}</svg>;
    };

    /* ---------------- Cylinders component ---------------- */
    function Cylinders({ items, hovered, onHover, scroll, mouse }) {
      // items: array of {id,x,y,size}
      return (
        <div className="absolute inset-0" style={{ perspective: '1200px', perspectiveOrigin: '50% 50%' }}>
          {items.map((c) => {
            // Parallax depth mapping: farther ones move less
            const depthFactor = (c.size / 120) * 0.9;
            const yPar = (scroll * depthFactor * 0.06); // vertical parallax
            const mx = mouse.x * 18 * depthFactor;
            const my = mouse.y * 12 * depthFactor;
            const hoveredTransform = hovered === c.id ? 'rotateX(14deg) translateZ(36px) scale(1.07)' : 'rotateX(8deg) translateZ(0) scale(1)';
            const transform = `${hoveredTransform} translateY(${yPar}px) translateX(${mx}px) rotate(${my}deg)`;
            const left = `${c.x}%`;
            const top = `${c.y}%`;
            const w = `${c.size}px`, h = `${c.size * 1.8}px`;
            return (
              <div key={c.id}
                className="absolute cylinder-container"
                style={{
                  left, top, width: w, height: h,
                  transform,
                  transition: 'transform 0.55s cubic-bezier(.22,1,.36,1)',
                  willChange: 'transform'
                }}
                onMouseEnter={() => onHover(c.id)}
                onMouseLeave={() => onHover(null)}
              >
                <div className="cylinder-top" />
                <div className="cylinder-body" />
                <div className="cylinder-bottom" />
              </div>
            );
          })}
        </div>
      );
    }

    /* ---------------- Main WazifHub component (complete) ---------------- */
